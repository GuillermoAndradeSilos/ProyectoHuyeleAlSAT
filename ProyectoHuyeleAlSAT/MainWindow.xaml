<Window x:Class="ProyectoHuyeleAlSAT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoHuyeleAlSAT"
        xmlns:mvvm="clr-namespace:ProyectoHuyeleAlSAT.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="515" Width="800" KeyDown="Window_KeyDown">
    <Window.DataContext>
        <mvvm:MainWindowViewModel></mvvm:MainWindowViewModel>
    </Window.DataContext>
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top">
            <TextBlock Text="Filas"/>
            <TextBox Focusable="False" x:Name="txtFilas" Text="10"/>
            <TextBlock Text="Columnas"/>
            <TextBox Focusable="False" x:Name="txtColumnas" Text="10"/>
            <TextBlock Text="Obstáculos"/>
            <TextBox Focusable="False" Text="30" x:Name="txtObstaculos"/>
            <Button Content="Generar" x:Name="btnGenerar" Command="{Binding GenerarCommand}"/>
            <TextBlock x:Name="txtVictoria" Text=""/>
            <!--<Button x:Name="btnResolver" Command="{Binding ResolverCommand}">Resolver</Button>-->
        </WrapPanel>
        <UniformGrid x:Name="tablero"></UniformGrid>
    </DockPanel>
</Window>
